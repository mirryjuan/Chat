<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_friend_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mirry.chat.activity.FriendInfoActivity"
    android:background="@color/bgBlue"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/darkBlue"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.example.mirry.chat.view.IconFontTextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/img_back"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friendInfo"
            android:textColor="@color/white"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkBlue">

        <ImageView
            android:id="@+id/add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_add"
            android:scaleType="centerInside"
            android:src="@drawable/add"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"/>

        <com.example.mirry.chat.view.CircleImageView
            android:id="@+id/head"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/head"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/sendMsg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_add"
            android:scaleType="centerInside"
            android:src="@drawable/sendmsg"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp" />

        <ImageView
            android:id="@+id/refuse"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_add"
            android:scaleType="centerInside"
            android:src="@drawable/refuse"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:visibility="gone"
            android:clickable="false"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkBlue"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_sex"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="5dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/accid"
        android:textSize="12sp"
        android:textColor="@color/lightBlue"/>
    <TextView
        android:id="@+id/accid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:textColor="@color/darkGray"/>

    <LinearLayout
        android:id="@+id/info_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lightBlue"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/phone"
            android:textSize="12sp"
            android:textColor="@color/lightBlue"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:textColor="@color/darkGray"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/info_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lightBlue"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/birthday"
            android:textSize="10sp"
            android:textColor="@color/lightBlue"/>
        <TextView
            android:id="@+id/birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:textColor="@color/darkGray"/>

    </LinearLayout>



</LinearLayout>
