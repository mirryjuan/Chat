<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notes.SelectAct"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/darkBlue"
        android:gravity="center_vertical"
        android:padding="10dp">

        <com.example.mirry.chat.view.IconFontTextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/img_back"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="@string/record"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"/>

        <com.example.mirry.chat.view.IconFontTextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/img_edit"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/s_delete"
            android:layout_centerVertical="true"
            android:visibility="visible"
            android:layout_marginRight="13dp"/>

        <com.example.mirry.chat.view.IconFontTextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/img_save"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@id/s_delete"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:visibility="gone"/>

        <com.example.mirry.chat.view.IconFontTextView
            android:id="@+id/s_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/img_delete"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/s_img"
        android:visibility="gone"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/s_video"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/s_et"
        android:focusable="false"
        android:background="@null"
        android:gravity="top"
        android:focusableInTouchMode="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_margin="10dp">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/pause"
            android:id="@+id/s_pause"
            android:visibility="gone"
            android:gravity="center"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/play"
            android:id="@+id/s_playRecord"
            android:visibility="gone"
            android:gravity="center"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/stop"
            android:id="@+id/s_stop"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>
