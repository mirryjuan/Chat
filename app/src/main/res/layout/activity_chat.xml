<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mirry.chat.activity.ChatActivity"
    android:background="@color/bgBlue"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/darkBlue"
        android:gravity="center_vertical"
        android:padding="10dp">

        <com.example.mirry.chat.view.IconFontTextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/img_back"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="David"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"/>

        <com.example.mirry.chat.view.IconFontTextView
            android:id="@+id/userinfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/img_user"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.example.mirry.chat.view.IconFontTextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/img_add"
            android:textSize="30sp"
            android:padding="5dp"
            android:textColor="@color/darkBlue"
            android:gravity="center"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="20dp"/>

        <ListView
            android:id="@+id/chatList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/bg_msg_send"
            android:textSize="18sp"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp"/>

        <Button
            android:id="@+id/send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="38dp"
            android:layout_weight="1"
            android:text="@string/send"
            android:textColor="@color/white"
            android:background="@drawable/bg_sendmsg_normal"
            android:layout_gravity="bottom"/>

    </LinearLayout>
</LinearLayout>
